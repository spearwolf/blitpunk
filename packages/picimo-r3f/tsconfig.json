{
  "compilerOptions": {

    "strict": true,
    "strictNullChecks": false,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,

    "allowJs": true,
    "target": "es5",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": "."

  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "compileOnSave": false
}
