{
  "name": "@spearwolf/blitpunk",
  "description": "todo",
  "version": "0.0.8",
  "author": "Wolfger Schramm",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spearwolf/blitpunk.git"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:dev": "rollup --config config/rollup.config.dev.js",
    "build:prod": "rollup --config config/rollup.config.prod.js && uglifyjs dist/blitpunk.js --compress --mangle >dist/blitpunk.min.js",
    "standard": "standard",
    "karma": "NODE_ENV=testing karma start config/karma.conf.js --single-run",
    "karma:watch": "NODE_ENV=testing karma start config/karma.conf.js",
    "esdoc": "esdoc",
    "lint:js": "npm run standard -- \"src/**/*.js\" \"test/**/*.js\" \"webgl-boilerplate/src/**/*.js\" \"examples/**/*.js\"",
    "test": "npm run lint:js && npm run karma",
    "boilerplate:build": "webpack --config config/webpack.webgl-boilerplate.config.js",
    "boilerplate:watch": "npm run boilerplate:build -- --watch",
    "boilerplate:serve": "serve -p 8080 webgl-boilerplate",
    "examples:build": "webpack --config config/webpack.examples.config.js",
    "examples:watch": "npm run examples:build -- --watch",
    "examples:serve": "serve -p 8080 examples",
    "examples": "run-p examples:serve examples:watch",
    "start": "run-p boilerplate:serve boilerplate:watch"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.0",
    "babel-preset-env": "^1.6.0",
    "chai": "^4.1.1",
    "colors": "^1.1.2",
    "commander": "^2.11.0",
    "css-loader": "^0.28.4",
    "ejs": "^2.5.7",
    "esdoc": "^0.5.2",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^2.30.1",
    "karma": "^1.5.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-sinon": "^1.0.5",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.5.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.1",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.6",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-resolve": "0.0.1-predev.1",
    "sass-loader": "^6.0.6",
    "serve": "^6.0.6",
    "sinon": "^3.1.0",
    "standard": "^10.0.3",
    "style-loader": "^0.18.2",
    "uglify-es": "^3.0.27",
    "webpack": "^3.5.2"
  },
  "dependencies": {
    "@spearwolf/eventize": "github:spearwolf/eventize#semver:^0.1.1",
    "document-register-element": "^1.7.0",
    "gl-matrix": "^2.4.0",
    "tinycolor2": "^1.4.1",
    "uuid": "^3.1.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "config/*.js",
      "examples/document-register-element.js",
      "bundle.js"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
