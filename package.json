{
  "name": "@spearwolf/picimo-monorepo",
  "private": true,
  "description": "TODO",
  "version": "0.0.10",
  "author": "Wolfger Schramm",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spearwolf/picimo.git"
  },
  "scripts": {
    "gatsby:develop": "cd website && gatsby develop",
    "boilerplate:build": "webpack --config config/webpack.webgl-boilerplate.config.js",
    "boilerplate:serve": "serve -p 8080 webgl-boilerplate",
    "boilerplate:watch": "yarn run boilerplate:build --watch",
    "testrunner": "webpack-dev-server --hot --inline --watch --config config/webpack.testrunner.config.js",
    "testrunner:headless": "mocha-headless-chrome --file http://localhost:9090 --visible",
    "build:libs": "node scripts/build-libs.js",
    "build": "run-p clean build:libs",
    "clean": "rm -fr .build dist/*",
    "esdoc": "esdoc",
    "examples:build": "webpack --config config/webpack.examples.config.js",
    "examples": "webpack-dev-server --hot --inline --watch --config config/webpack.examples.config.js",
    "karma": "cross-env NODE_ENV=testing karma start config/karma.conf.js",
    "karma:watch": "cross-env NODE_ENV=testing karma start config/karma.conf.js --no-single-run --auto-watch",
    "lint:js": "yarn run standard \"src/**/*.js\" \"test/**/*.js\" \"webgl-boilerplate/src/**/*.js\" \"examples/**/*.js\"",
    "standard": "standard",
    "todos": "leasot --skip-unsupported src",
    "start": "run-p boilerplate:serve boilerplate:watch",
    "test": "run-s lint:js karma"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-minify": "^0.2.0",
    "bowser": "^1.9.1",
    "chai": "^4.1.2",
    "colors": "^1.1.2",
    "commander": "^2.13.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.8",
    "ejs": "^2.5.7",
    "esdoc": "^1.0.3",
    "esdoc-standard-plugin": "^1.0.0",
    "gatsby-cli": "^1.1.28",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^2.30.1",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.4",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.9",
    "leasot": "^4.13.0",
    "mocha": "^4.0.1",
    "mocha-headless-chrome": "^1.8.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "pixelmatch": "^4.0.2",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.9",
    "sass-loader": "^6.0.6",
    "serve": "^6.4.5",
    "shelljs": "^0.8.0",
    "sinon": "^4.1.4",
    "standard": "^10.0.3",
    "style-loader": "^0.19.1",
    "stylelint-config-standard": "^18.0.0",
    "terminal-kit": "^1.13.11",
    "uglify-es": "^3.2.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1"
  },
  "dependencies": {
    "@spearwolf/eventize": "^0.6.2",
    "document-register-element": "^1.7.0",
    "gl-matrix": "^2.4.0",
    "lodash": "^4.17.4",
    "tinycolor2": "^1.4.1",
    "uuid": "^3.1.0",
    "whatwg-fetch": "^2.0.3"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "config/*.js",
      "examples/js/*.js",
      "bundle.js",
      "document-register-element.js"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-type-no-unknown": null
    }
  }
}
