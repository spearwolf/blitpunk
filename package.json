  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/spearwolf/picimo/issues"
  },
  "homepage": "https://github.com/spearwolf/picimo#readme",
  "devDependencies": {
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint",
