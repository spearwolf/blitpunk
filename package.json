{
  "name": "@spearwolf/blitpunk",
  "description": "todo",
  "version": "0.0.8",
  "author": "Wolfger Schramm",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spearwolf/blitpunk.git"
  },
  "scripts": {
    "clean": "rm -fr dist/*.js examples/js",
    "build:uglify": "uglifyjs -c -m -o dist/blitpunk-modern.js dist/blitpunk-modern.js && uglifyjs -c -m -o dist/blitpunk-safari.js dist/blitpunk-safari.js && uglifyjs -c -m -o dist/blitpunk-legacy.js dist/blitpunk-legacy.js && uglifyjs -c -m -o dist/blitpunk.js dist/blitpunk.js",
    "build": "node scripts/build-libs.js && npm run build:uglify && npm run examples:copy_resources",
    "standard": "standard",
    "karma": "NODE_ENV=testing karma start config/karma.conf.js --single-run",
    "karma:watch": "NODE_ENV=testing karma start config/karma.conf.js",
    "esdoc": "esdoc",
    "lint:js": "npm run standard -- \"src/**/*.js\" \"test/**/*.js\" \"webgl-boilerplate/src/**/*.js\" \"examples/**/*.js\"",
    "test": "npm run lint:js && npm run karma",
    "boilerplate:build": "webpack --config config/webpack.webgl-boilerplate.config.js",
    "boilerplate:watch": "npm run boilerplate:build -- --watch",
    "boilerplate:serve": "serve -p 8080 webgl-boilerplate",
    "examples:build": "webpack --config config/webpack.examples.config.js",
    "examples:build:watch": "npm run examples:build -- --watch",
    "examples:copy_resources": "mkdir -p examples/js && cp dist/blitpunk*.js node_modules/document-register-element/build/document-register-element.js node_modules/systemjs/dist/system.js* examples/js/",
    "examples:serve": "serve -p 8080 examples",
    "examples": "npm-run-all --serial examples:copy_resources --parallel examples:serve examples:build:watch",
    "start": "run-p boilerplate:serve boilerplate:watch"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-minify": "^0.2.0",
    "chai": "^4.1.1",
    "colors": "^1.1.2",
    "commander": "^2.11.0",
    "css-loader": "^0.28.4",
    "ejs": "^2.5.7",
    "esdoc": "^1.0.1",
    "esdoc-standard-plugin": "^1.0.0",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^2.30.1",
    "karma": "^1.5.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-sinon": "^1.0.5",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.5.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.1",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.6",
    "sass-loader": "^6.0.6",
    "serve": "^6.0.6",
    "shelljs": "^0.7.8",
    "sinon": "^3.2.0",
    "standard": "^10.0.3",
    "style-loader": "^0.18.2",
    "systemjs": "^0.20.17",
    "uglify-es": "^3.0.27",
    "webpack": "^3.5.4"
  },
  "dependencies": {
    "@spearwolf/eventize": "github:spearwolf/eventize#semver:^0.1.1",
    "bowser": "^1.7.2",
    "document-register-element": "^1.7.0",
    "gl-matrix": "^2.4.0",
    "tinycolor2": "^1.4.1",
    "uuid": "^3.1.0",
    "whatwg-fetch": "^2.0.3"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "config/*.js",
      "examples/js/*.js",
      "bundle.js"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
